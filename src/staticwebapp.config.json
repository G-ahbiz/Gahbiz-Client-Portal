{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*", 
      "/*.{css,js,json,ico,png,jpg,jpeg,svg,woff,woff2}",
      "/robots.txt",
      "/sitemap.xml"
    ]
  },
  "mimeTypes": {
    ".txt": "text/plain",
    ".xml": "application/xml"
  },
  "routes": [
    {
      "route": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "route": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml"
      }
    }
  ],
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  }
}
